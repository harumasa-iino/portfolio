<!-- app/views/home/index.html.erb -->

  <div class="swiper">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <%= image_tag("swiper1.jpg", alt: "swiper Image", class: 'img-fluid') %>
      </div>
      <div class="swiper-slide">
        <%= image_tag("swiper2.jpg", alt: "swiper Image", class: 'img-fluid') %>
      </div>
      <div class="swiper-slide">
        <%= image_tag("swiper3.jpg", alt: "swiper Image", class: 'img-fluid') %>
      </div>
    </div>
    <div class="swiper-pagination"></div>
  </div>

  <h1 class="display-4">あなたの部屋にあったポスターを</h1>
  <p class="lead">
    インテリアにあったポスターや絵画を<br>
    提案してくれるアプリです<br>
    統一感のある部屋の作り出すために<br>
    ポスターを選んでみよう
  </p>

  <%= link_to "インテリアをアップロードする", "#", class: "btn btn-primary mt-3" %>

  <div class="row">
    <div class="col-md-6">
      <div class="d-flex align-items-center">
        <i class="fas fa-thin fa-filter mr-2" style="font-size: 3em;"></i>
        <p class="no-margin">フィルターモード：デザインタイプを選択することで、好みのポスター/絵画を提案</p>
      </div>
    </div>
    <div class="col-md-6">
      <div class="d-flex align-items-center">
        <i class="fas fa-thin fa-robot mr-2" style="font-size: 3em;"></i>
        <p class="no-margin">レコメンドモード：部屋のインテリアに合ったポスター/絵画を色彩アルゴリズムを用いて提案</p>
      </div>
    </div>
  </div>


  
  <script>
  const swiperOptions = {
    direction: 'horizontal',
    loop: true,
    pagination: {
        el: ".swiper-pagination",
        dynamicBullets: true,
      },
      autoplay: {
        delay: 6000,
        disableOnInteraction: false,     
      },
    }
  window.onload = function() {
    new Swiper('.swiper', swiperOptions);
  }
  </script>
