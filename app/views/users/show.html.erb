<h1>マイページ</h1>

<p>メール: <%= @user.email %></p>

<h3>保存画像一覧</h3>

  <% @composite_images.each do |composite_image| %>
    <div class="image-with-source">
      <%= link_to image_tag(composite_image.composite_image.url, class: 'img-fluid', size: "200x100"), composite_image_path(composite_image) %>
      <div class="source-text">
        画像出典：
        <% if composite_image.poster.present? %>
          <%= link_to "Amazon.co.jp", composite_image.poster.url, target: "_blank" %>
        <% else %>
          <%= link_to "Amazon.co.jp", "https://www.amazon.co.jp", target: "_blank" %>
        <%end%>
        </div>
    </div>
  <% end %>

